{
  "name": "@rykee/personal-os-mcp",
  "version": "1.0.0",
  "description": "MCP server for PersonalOS - AI-powered task management with goal-driven prioritization. Based on PersonalOS by Amanai Product.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "personal-os-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --format=esm --banner:js=\"#!/usr/bin/env node\"",
    "build:tsc": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "claude",
    "anthropic",
    "task-management",
    "productivity",
    "personal-os"
  ],
  "author": "rykee",
  "contributors": [
    {
      "name": "Amanai Product",
      "url": "https://github.com/amanaiproduct/personal-os"
    }
  ],
  "license": "CC-BY-NC-SA-4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryankee/plugins"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
